{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "ignorePatterns": ["public/*"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    // "quotes": ["error", "single"],
    "quotes": "off",
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  }
}
